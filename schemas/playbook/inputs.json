{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z\\.0-9\\-]+$": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "description",
        "type",
        "validation"
      ],
      "properties": {
        "description": {
          "type":"string"
        },
        "type": {
          "type": "string"
        },
        "required": {
          "type": "boolean",
          "default": true
        },
        "validation": {
          "type": "string"
        },
        "default": {
        }
      }
    }
  }
}
