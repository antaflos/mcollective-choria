{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_\\-\\.]+$": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type":"string",
          "default": "mcollective"
        },
        "discovery_method": {
          "type": "string",
          "default": "mc"
        },
        "at_least": {
          "type": "integer",
          "default": 1
        },
        "when_empty": {
          "type": "string"
        },
        "test": {
          "type": "boolean",
          "default": true
        },
        "uses": {
          "type": "array"
        },
        "limit": {
          "type": "integer"
        },
        "agents": {
          "type": "array"
        },
        "facts": {
          "type": "array"
        },
        "classes": {
          "type": "array"
        },
        "identity": {
          "type": "array"
        },
        "compound": {
          "type": "string"
        }
      }
    }
  }
}
